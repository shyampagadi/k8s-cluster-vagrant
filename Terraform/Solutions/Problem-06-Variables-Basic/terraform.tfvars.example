# Variables - Basic Types and Usage - Example Variable Values

# String Variables
project_name = "variables-demo"
environment = "development"
app_name = "web-app"
aws_region = "us-west-2"
vpc_cidr = "10.0.0.0/16"
domain_name = "example.com"
subdomain = "app"
ami_id = ""  # Leave empty to use data source

# Number Variables
instance_count = 2
subnet_count = 2
hourly_rate = 0.0234
database_port = 3306
database_allocated_storage = 20
log_retention_days = 30

# Boolean Variables
create_instances = true
create_database = false
enable_monitoring = true
enable_encryption = true
enable_dns_hostnames = true
enable_dns_support = true
enable_http = true
enable_https = true
enable_ssh = false
enable_versioning = false
enable_multi_az = false
block_public_access = true

# Instance Type Variables
development_instance_type = "t3.micro"
production_instance_type = "t3.small"

# Database Configuration Variables
database_engine = "mysql"
database_version = "8.0"
database_instance_class = "db.t3.micro"
database_name = "webapp"
database_username = "admin"
database_password = "changeme123"

# Backup Configuration Variables
backup_retention_production = 30
backup_retention_development = 7
backup_window = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"

# Security Configuration Variables
ssh_cidr_blocks = ["10.0.0.0/8"]

# Availability Zones
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Additional Configuration
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "Daily"
  Compliance  = "Required"
  Project     = "Variables Demo"
}
