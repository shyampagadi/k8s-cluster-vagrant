# Conditional Logic and Dynamic Blocks - Example Variable Values

# String Variables
project_name = "conditional-logic-demo"
environment = "development"
app_name = "web-app"
aws_region = "us-west-2"
vpc_cidr = "10.0.0.0/16"
ami_id = ""  # Leave empty to use data source

# Number Variables
development_instance_count = 1
staging_instance_count = 2
production_instance_count = 3
database_port = 3306
log_retention_days = 30
root_volume_size = 20

# Boolean Variables
create_database = false
enable_monitoring = true
enable_encryption = true
enable_dns_hostnames = true
enable_dns_support = true
enable_versioning = false
enable_multi_az = false
block_public_access = true
enable_egress = true

# Instance Type Variables
development_instance_type = "t3.micro"
staging_instance_type = "t3.small"
production_instance_type = "t3.large"

# List Variables
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Complex List Variables for Dynamic Blocks
production_ingress_rules = [
  {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  },
  {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  },
  {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["10.0.0.0/8"]
  }
]

development_ingress_rules = [
  {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  },
  {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
]

egress_rules = [
  {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
]

# Complex List Variables for EBS Volumes
production_volumes = [
  {
    device_name = "/dev/sdf"
    size        = 50
    type        = "gp3"
  },
  {
    device_name = "/dev/sdg"
    size        = 100
    type        = "gp3"
  }
]

development_volumes = [
  {
    device_name = "/dev/sdf"
    size        = 20
    type        = "gp2"
  }
]

# Database Configuration Variables
database_engine = "mysql"
database_version = "8.0"
database_instance_class = "db.t3.micro"
database_name = "webapp"
database_username = "admin"
database_password = "changeme123"
database_allocated_storage = 20

# Backup Configuration Variables
backup_retention_period = 7
backup_window = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"

# Additional Configuration
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Backup      = "Daily"
  Compliance  = "Required"
  Project     = "Conditional Logic Demo"
}
