# File Organization and Project Structure - Example Variables

# Project Configuration
project_name = "my-terraform-project"
environment = "dev"
aws_region = "us-west-2"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
enable_dns_hostnames = true
enable_dns_support = true
subnet_count = 2
availability_zones = ["us-west-2a", "us-west-2b", "us-west-2c"]

# Security Configuration
ssh_cidr_blocks = ["0.0.0.0/0"]

# Instance Configuration
ami_id = "ami-0c55b159cbfafe1d0"
app_name = "web-app"

# Database Configuration
create_database = false
database_engine = "mysql"
database_version = "8.0"
database_instance_class = "db.t3.micro"
database_allocated_storage = 20
database_name = "webapp"
database_username = "admin"
database_password = "TempPassword123!"
database_port = 3306
backup_retention_period = 7
backup_window = "03:00-04:00"
maintenance_window = "sun:04:00-sun:05:00"
enable_multi_az = false

# S3 Configuration
enable_versioning = true
block_public_access = true

# Monitoring Configuration
log_retention_days = 7

# File Organization Configuration
file_organization_pattern = "resource-based"
enable_module_organization = false
documentation_level = "comprehensive"
version_control_integration = true

# Additional Tags
additional_tags = {
  Owner = "DevOps Team"
  CostCenter = "Engineering"
  Project = "Infrastructure"
}
