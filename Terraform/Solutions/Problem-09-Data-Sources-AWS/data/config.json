{
  "application": {
    "name": "DataSourcesApp",
    "environment": "development",
    "version": "1.0.0",
    "debug": false
  },
  "server": {
    "host": "0.0.0.0",
    "port": 80,
    "workers": 4,
    "timeout": 30
  },
  "database": {
    "host": "mydb.example.com",
    "port": 3306,
    "name": "webapp",
    "username": "admin",
    "ssl": true,
    "pool_size": 10
  },
  "monitoring": {
    "enabled": true,
    "retention_days": 30,
    "alert_threshold": 80.0,
    "endpoint": "/health"
  },
  "logging": {
    "level": "info",
    "file": "/var/log/data-sources-app/app.log",
    "max_size": "100MB",
    "max_files": 5
  },
  "cache": {
    "enabled": true,
    "type": "redis",
    "host": "localhost",
    "port": 6379,
    "ttl": 3600
  },
  "security": {
    "cors_enabled": true,
    "allowed_origins": ["https://data-sources-app.example.com"],
    "rate_limit": 100,
    "rate_window": 60
  },
  "features": {
    "feature_a": true,
    "feature_b": false,
    "feature_c": false
  },
  "instance": {
    "count": 2,
    "type": "web",
    "region": "us-west-2",
    "availability_zone": "auto"
  },
  "data_sources": {
    "stage": "active",
    "state_management": "terraform",
    "dependencies": ["vpc", "subnet", "security_group"],
    "lifecycle_rules": ["create_before_destroy", "prevent_destroy", "ignore_changes"]
  }
}
